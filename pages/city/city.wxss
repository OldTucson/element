
.search .search-body{
  padding: 20px;
  border: 1px solid #eee;
}
.search .search-body .search-text{
  width: 100%;
  height: 80rpx;
  border: 1px solid #eee;
}
.search .search-body .search-btn{
  margin-top: 20rpx;
  width: 100%;
  height: 80rpx;
  background-color: #3190e8;
  color: white;
  line-height: 80rpx;
  font-size: 34rpx;
}
.search .search-body .search-btn::after{
  border: none;
}
.search .addr-list{
  padding: 20rpx;
}
.search .addr-list .addr{
  height: 180rpx;
  display: flex;
  flex-flow: column wrap;
  justify-content: space-around;
  align-content: center;
  align-items: flex-start;
  border-top: 1px solid #eee;
}
.search .addr-list .addr .addr-name{
  font-size: 34rpx;
}
.search .addr-list .addr .addr-desc{
  color: #999;
  font-size: 30rpx;
}